<?xml version="1.0" encoding="UTF-8"?>
<project default="toPython" name="scriptToPython">
    <property name="ECLIPSE_HOME" value="../../../../../../../../eclipse/modeling-2023-09/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="scriptToPython.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/scriptToPython/bin"/>
    </path>

    <path id="scriptToPython.classpath">
        <path refid="scriptToPython.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="scriptToPython.libraryclasspath.alljars">
        <pathelement location="../scriptToPython/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="scriptToPython.classpath.alljars">
        <path refid="scriptToPython.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="toPython">
        <java classname="scriptToPython.main.ToPython" classpathref="scriptToPython.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="toPython.alljars">
        <java classname="scriptToPython.main.ToPython" classpathref="scriptToPython.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
